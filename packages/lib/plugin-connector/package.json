{
	"name": "@evidence-dev/plugin-connector",
	"version": "2.1.0",
	"description": "",
	"type": "module",
	"bin": "./dist/debugger/cli.js",
	"scripts": {
		"test": "vitest --run",
		"test:watch": "vitest",
		"build": "tsc --noEmit -p tsconfig.json && parcel build",
		"build:debug": "parcel build --no-optimize",
		"watch": "parcel watch",
		"check": "tsc --noEmit -p tsconfig.json",
		"prepublish": "tsc --noEmit -p tsconfig.json && parcel build"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@evidence-dev/db-commons": "workspace:*",
		"@evidence-dev/telemetry": "workspace:*",
		"@evidence-dev/universal-sql": "workspace:*",
		"@types/estree": "^1.0.1",
		"@types/lodash.debounce": "^4.0.9",
		"@types/lodash.merge": "^4.6.8",
    "blessed": "^0.1.81",
		"chalk": "^5.2.0",
		"chokidar": "3.6.0",
		"listr2": "^7.0.2",
		"lodash.debounce": "^4.0.8",
		"lodash.merge": "^4.6.2",
		"ora": "^7.0.1",
		"svelte": "4.2.12",
		"svelte-preprocess": "^5.1.3",
		"sveltekit-autoimport": "1.8.0",
		"vite": "5.1.6",
		"yaml": "^2.3.4",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@evidence-dev/component-utilities": "workspace:*",
		"@parcel/core": "2.12.0",
		"@parcel/packager-ts": "2.12.0",
		"@parcel/transformer-inline-string": "2.12.0",
		"@parcel/transformer-typescript-types": "2.12.0",
    "@types/blessed": "^0.1.25",
		"@types/mock-fs": "^4.13.1",
		"@types/node": "20.11.28",
		"commander": "^11.0.0",
		"mock-fs": "^5.2.0",
		"parcel": "2.12.0",
		"rollup": "^4.13.0",
		"typescript": "5.4.2",
		"vitest": "^0.34.1"
	},
	"targets": {
		"types": false,
		"main": {
			"context": "node"
		},
		"module": {
			"context": "node"
		},
		"debugger": {
			"context": "node",
			"source": "./src/cli.js",
			"outputFormat": "esmodule"
		},
		"loadConfig": {
			"context": "node",
			"source": "./src/plugin-discovery/load-config.js",
			"outputFormat": "commonjs",
			"optimize": false,
			"isLibrary": true,
			"sourceMap": false
		},
    "terminal-ui": {
      "source": "./src/build-plugins/verbose-logs/terminal-ui.cjs",
      "outputFormat": "commonjs",
      "distDir": "dist/terminal-ui",
      "context": "node",
      "optimize": false,
      "isLibrary": true,
			"sourceMap": false
    }
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs",
			"types": "./types/index.d.ts"
		},
		"./load-config": "./dist/loadConfig/load-config.js"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"source": "src/index.js",
	"types": "types/index.d.ts"
}
